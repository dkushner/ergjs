{
  "name": "erg",
  "version": "0.0.1",
  "description": "Web worker task manager.",
  "main": "lib/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register",
    "build": "./node_modules/babel-cli/bin/babel.js src -d lib/",
    "serve": "http-server -p 3000 ./",
    "watch": "nodemon -q -w src/ --ext '.' --exec 'npm run build'",
    "docs": "./node_modules/.bin/esdoc -c ./esdoc.json",
    "live-reload": "livereload ./lib",
    "dev": "parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch -s'",
    "test": "./node_modules/karma/bin/karma start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dkushner/erg"
  },
  "author": "David Kushner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dkushner/erg/issues"
  },
  "homepage": "https://github.com/dkushner/erg",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "esdoc": "^0.4.7",
    "http-server": "^0.9.0",
    "jasmine": "^2.4.1",
    "karma": "^1.1.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "livereload": "^0.4.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "parallelshell": "^2.0.0",
    "sinon": "^1.17.4"
  }
}
